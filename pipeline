kubectl create deployment myapp --image=nginx
kubectl set image deployment/mynginx nginx=nginx:latest
kubectl expose deployment mynginx --type=NodePort --port=80--target-port=80
kubectl expose deployment mynginx --type=NodePort --port=8090 --target-port=80 --name=mynginx
kubectl scale deployment mynginx --replicas=4
kubectl port-forward svc/mynginx 8090:80


Option 3: Minikube Tunnel
minikube tunnel
Get URL:
minikube service mynginx --url
minikube dashboard
kubectl delete deployment mynginx
